# Banking MCP Server - Production Environment Configuration
# Copy this file to .env and update with your production values

# Security Configuration
JWT_SECRET=your-256-bit-secret-key-replace-in-production
JWT_EXPIRATION_HOURS=1
JWT_REFRESH_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Audit Logging
ENABLE_AUDIT_LOGGING=true

# Input Validation
MAX_STRING_LENGTH=1000

# Azure Configuration (from main project)
COSMOSDB_ENDPOINT=your-cosmos-endpoint
COSMOSDB_KEY=your-cosmos-key
AZURE_OPENAI_ENDPOINT=your-openai-endpoint
AZURE_OPENAI_KEY=your-openai-key
AZURE_OPENAI_EMBEDDINGDEPLOYMENTID=text-embedding-3-small
AZURE_OPENAI_COMPLETIONSDEPLOYMENTID=gpt-4o

# Application Insights (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Server Configuration
PORT=8080
LOG_LEVEL=INFO

# Development Mode (set to false in production)
DEVELOPMENT_MODE=false

# Production Security Recommendations:
# 1. Generate a strong JWT secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 2. Set ALLOWED_ORIGINS to your specific domains only
# 3. Enable HTTPS in production
# 4. Use Azure Key Vault for secrets management
# 5. Enable Application Insights for monitoring
# 6. Set up proper RBAC with Azure AD integration